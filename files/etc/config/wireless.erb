config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'platform/ar934x_wmac'
	option htmode 'HT20'
	option channel '<%= @node['channel'] %>'
	option country 'DE'
	option txpower '18'
    option country_ie '1'
	option require_mode 'n'
    option wmm '1'
    option short_preamble '1'


<% unless @node['ssid'].nil? %>
config wifi-iface 'default_radio0'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option encryption 'none'
	option ssid '<%= @node['ssid'] %>'
<% end %>
config wifi-device 'radio1'
        option type 'mac80211'
        option hwmode '11a'
        option path 'pci0000:00/0000:00:00.0'
        option country 'DE'
        option disabled '0'
        option htmode 'HT40'
        option channel '40'

<% unless @node['ssid_5'].nil? %>
config wifi-iface 'default_radio1'
	option ssid '<%= @node['ssid_5'] %>'
    option encryption 'psk2'
    option device 'radio1'
    option mode 'sta'
    option key '<%= @secrets['wpa_backbone'] %>'
    option wds '1'
    option network 'lan'
<% end %>
