config wifi-device 'radio0'
        option type 'mac80211'
        option channel '11'
        option hwmode '11g'
        option path 'platform/ar934x_wmac'
        option htmode 'HT20'
        option country 'DE'
        option txpower '4'

config wifi-iface
        option device 'radio0'
        option encryption 'none'
        option ssid 'mesh-test'
        option mode 'adhoc'
        option bssid 'EA:F8:49:35:A9:48'
        option network 'mesh'


